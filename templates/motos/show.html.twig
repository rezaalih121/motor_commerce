{% extends 'base.html.twig' %}

{% block title %}Motos{% endblock %}

{% block body %}
    <h1>Motos</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ moto.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ moto.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ moto.description }}</td>
            </tr>
            <tr>
                <th>Kilometre</th>
                <td>{{ moto.kilometre }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ moto.price }}</td>
            </tr>
            <tr>
                <th>Date_imat</th>
                <td>{{ moto.dateImat ? moto.dateImat|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Power</th>
                <td>{{ moto.power }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_motos_index') }}">back to list</a>

    <a href="{{ path('app_motos_edit', {'id': moto.id}) }}">edit</a>

    {{ include('motos/_delete_form.html.twig') }}
{% endblock %}
